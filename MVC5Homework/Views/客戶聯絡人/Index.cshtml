@model IEnumerable<MVC5Homework.Models.客戶聯絡人>

@{
    ViewBag.Title = "Index";
}

<h2>客戶聯絡人管理</h2>
@if (TempData["ErrMsg"] != null)
{
    <script>
        alert('@TempData["ErrMsg"]');
    </script>
}
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td style="vertical-align:middle">
                @Html.ActionLink("Create New", "Create") |
            </td>
            <td>
                @Html.DropDownList("JobFunc", null, "全部", new { @class = "form-control", @OnChange = " $('form').submit();" })
            </td>
            <td>
                @Html.TextBox("keyword", null, new { @class = "form-control" })
            </td>
            <td>
                <input type="submit" value="搜尋" class="btn btn-default" formaction="@Url.Action("Index")" />
                |
                <input type="submit" class="btn btn-default" value="匯出Excxel" formaction="@Url.Action("ExportExcel")" />
                @Html.Hidden("currentKeyword", TempData["keyword"])
                @Html.Hidden("currentJobFunc", TempData["JobFunc"])

            </td>
        </tr>
    </table>

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("職稱", "Index", new { sort = ViewBag.sort, id = "職稱" })
            </th>
            <th>
                @Html.ActionLink("姓名", "Index", new { sort = ViewBag.sort, id = "姓名" })
            </th>
            <th>
                @Html.ActionLink("Email", "Index", new { sort = ViewBag.sort, id = "Email" })
            </th>
            <th>
                @Html.ActionLink("手機", "Index", new { sort = ViewBag.sort, id = "手機" })
            </th>
            <th>
                @Html.ActionLink("電話", "Index", new { sort = ViewBag.sort, id = "電話" })
            </th>
            <th>
                @Html.ActionLink("客戶名稱", "Index", new { sort = ViewBag.sort, id = "客戶名稱" })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.職稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.姓名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.手機)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.電話)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}


